<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="SwipeRefreshLayout_Color1" format="color"></attr>
    <attr name="SwipeRefreshLayout_Color2" format="color"></attr>
    <attr name="SwipeRefreshLayout_Color3" format="color"></attr>
    <attr name="SwipeRefreshLayout_Color4" format="color"></attr>
    <!--没有数据的时候是否显示LoadView-->
    <attr name="rv_noDataIsShow" format="boolean" />
    <attr name="rv_heightRatio" format="reference|float" />
    <attr name="rv_heightDimen" format="reference|dimension" />
    <!--底部页脚布局-->
    <attr name="rv_footLoadLayoutId" format="reference" />
    <!--底部页脚主颜色-->
    <attr name="rv_footLoadColor" format="reference|color" />
    <declare-styleable name="SuperRecyclerView">
        <!--是否可以回到顶部-->
        <attr name="srv_isGoTop" format="boolean" />
        <!--返回顶部的图标-->
        <attr name="srv_goTopIcon" format="reference" />
        <attr name="srv_goTopIcon_strokeColor" format="color" />
        <attr name="srv_goTopIcon_strokeWidth" format="dimension" />
        <!--第几个的时候打开AnimMenu-->
        <attr name="srv_goTopOnPosition" format="integer" />
        <attr name="rv_heightRatio"></attr>
        <attr name="rv_heightDimen"></attr>
        <attr name="rv_noDataIsShow"></attr>
        <attr name="rv_footLoadLayoutId"></attr>
        <attr name="rv_footLoadColor"></attr>
        <!--内部RecyclerView的背景-->
        <attr name="rv_neibuBackground"></attr>

    </declare-styleable>
    <declare-styleable name="RecyclerViewExtend">
        <attr name="rv_heightRatio"></attr>
        <attr name="rv_heightDimen"></attr>
    </declare-styleable>
    <declare-styleable name="RecyclerViewAutoLoadding">
        <attr name="rv_noDataIsShow"></attr>
        <attr name="rv_footLoadLayoutId"></attr>
        <attr name="rv_footLoadColor"></attr>
    </declare-styleable>
</resources>